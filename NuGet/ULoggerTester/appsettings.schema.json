{
  "$schema": "http://json-schema.org/draft-07/schema",

  "properties": {

    "AppSettings": {
      "type": "object",
      "properties": {
        "Email": {
          "type": "object",
          "properties": {
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            },
            "fromaddress": {
              "type": "string"
            },
            "toaddress": {
              "type": "string"
            }
          },
          "required": [ "username", "password", "fromaddress", "toaddress" ]
        }
      },
      "required": ["Email"]
    }

  },

  "required": ["AppSettings"]

}